<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.clevertap.demo.PersonalityTypeFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "vertical">

        <SeekBar
            android:id="@+id/earth_seekbar"
            style="@style/SeekBarEarthSeekBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dip"
            android:paddingTop="12dip"
            android:max="10"/>


        <SeekBar
            android:id="@+id/fire_seekbar"
            style="@style/SeekBarFireSeekBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dip"
            android:paddingTop="12dip"
            android:max="10"/>

        <SeekBar
            android:id="@+id/metal_seekbar"
            style="@style/SeekBarMetalSeekBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dip"
            android:paddingTop="12dip"
            android:max="10"/>

        <SeekBar
            android:id="@+id/water_seekbar"
            style="@style/SeekBarWaterSeekBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dip"
            android:paddingTop="12dip"
            android:max="10"/>

        <SeekBar
            android:id="@+id/wood_seekbar"
            style="@style/SeekBarWoodSeekBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dip"
            android:paddingTop="12dip"
            android:max="10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >
            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:minHeight="50dp"
                android:textSize="22sp">
            </Button>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
